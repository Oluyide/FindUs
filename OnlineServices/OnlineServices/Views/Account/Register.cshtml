    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_accountLayout.cshtml";
}

<div class="banner-title">
    <div class="row">
        <div class="col-md-12">
           <h1> Sign up! with us</h1>
        <p class="cfloat  w60">
            Open an account with us today using your email address and you get verified to  watch your business grow. Findus.com promotes Nigerian businesses - let's help your business
        </p>
    </div></div>

</div>



<div class="row">
