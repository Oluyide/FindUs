                <div class="text">*</div>
            </div>*@
                    </div>
                </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-1">
            <div class="required-field-block">
                @Html.TextBoxFor(m => m.Phonenumber, new { @class = "form-control ", placeholder = "Phone Number", tabindex = "2" })
                <div class="required-icon">
                    <div class="text">*</div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-1">
            <div class="required-field-block">
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control ", placeholder = "Official/Home Address", tabindex = "2" })
                <div class="required-icon">
                    <div class="text">*</div>
                </div>
            </div>
        </div>
    </div>
                <div class="row">
                    @*<div class="col-xs-4 col-sm-3 col-md-3">
