<script>
    $(document).ready(function () {
        var $btnSets = $('#responsive'),
        $btnLinks = $btnSets.find('a');

        $btnLinks.click(function (e) {
            e.preventDefault();
            $(this).siblings('a.active').removeClass("active");
            $(this).addClass("active");
            var index = $(this).index();
            $("div.user-menu>div.user-menu-content").removeClass("active");
            $("div.user-menu>div.user-menu-content").eq(index).addClass("active");
        });
    });

    $(document).ready(function () {
        $("[rel='tooltip']").tooltip();

        $('.view').hover(
            function () {
                $(this).find('.caption').slideDown(250); //.fadeIn(250)
            },
            function () {
                $(this).find('.caption').slideUp(250); //.fadeOut(205)
            }
        );
    });

    $('#post').keypress(function (e) {
      
        if (e.which == 13) {
            
            event.preventDefault();
            $.ajax({
                type: 'POST', // define the type of HTTP verb we want to use (POST for our form)
                url: "@(Url.RouteUrl("ProfilePage"))",
                data: $('#formId').serializeArray(), // our data object
                // what type of data do we expect back from the server
                success: function (data) {
                    $('#postlist li').remove()
                    load();
                }
            });
          
        }
    });

    function load() {
        //$('#postlist').remove();
        $.ajax({
            type: 'GET', // define the type of HTTP verb we want to use (POST for our form)
            url: "@(Url.RouteUrl("LoadPost"))", // the url where we want to POST
            dataType: 'json',
        success: function (data) {
            for (var i = 0; i < data.length; i++)
            {
                var toprint = '<ul  id="postlist" class="list-group ">' + '<li class="list-group-item">' + data[i].Post + '<br/>' + '<i style="color:#beb8b8">' + data[i].timeposted + '</i>' + '</li>';
                $('#container').append(toprint);
            }
            $('#post').val('');
           
        }

    });
    }

       


    $("#dialog").dialog({
        autoOpen: false,
        modal: true,
        buttons: {
            "Confirm": function () {
                alert("You have confirmed!");
            },
            "Cancel": function () {
                $(this).dialog("close");
            }
        }
    });

    $("#callConfirm").on("click", function (e) {
        e.preventDefault();
        $("#dialog").dialog("open");
    });


   


</script>